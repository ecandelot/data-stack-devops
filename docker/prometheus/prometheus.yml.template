global:
  scrape_interval: 15s

scrape_configs:
  - job_name: "prometheus"
    static_configs:
      - targets: ["localhost:${PROMETHEUS_PORT}"]

  - job_name: "node-exporter"
    static_configs:
      - targets: ["node-exporter:${NODE_EXPORTER_PORT}"]

  - job_name: "airflow"
    static_configs:
      - targets: ["airflow:${AIRFLOW_METRICS_PORT}"]
